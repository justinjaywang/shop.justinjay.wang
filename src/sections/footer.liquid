<footer class="footer">
  {% if template.name == 'index' %}
    {% comment %}{{ section.settings.footer_text | escape }}{% endcomment %}
  {% elsif template.name == 'product' %}
    <a href="/" class="fade">{{ 'products.product.back_home' | t }}</a>
  {% endif %}
</footer>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "text",
        "id": "footer_text",
        "label": "Footer text",
        "default": "Thanks for stopping by!"
      }
    ]
  }
{% endschema %}
