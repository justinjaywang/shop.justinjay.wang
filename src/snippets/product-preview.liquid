<div class="product-preview col">
  {% assign image = product.images[0] %}
  <a href="{{ product.url }}" class="product-preview__image-link">
    {% include 'responsive-image' with
      image: image,
      max_width: 1080,
      max_height: 675,
    %}
  </a>

  <a href="{{ product.url }}" class="fade block">
    <h2>{{ product.title }}</h2>
    <strong>{{ product.price | money_without_trailing_zeros }}</strong>
  </a>
</div>
